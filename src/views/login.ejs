<%- include("partials/header.ejs")%> <% var error,title %>
<section
  class="d-flex flex-column vh-100 w-100 justify-content-center align-items-center"
>
  <div
    class="container d-flex flex-column justify-content-center align-items-center"
  >
    <% if(error){%>
    <div class="w-50 alert alert-danger">
      <strong><%=error%></strong>
    </div>
    <% } %>
    <form action="/login" method="POST" autocomplete="off" class="w-50">
      <h2 class="text-center">Log in</h2>
      <br />
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingPassword"
          placeholder="Username"
          name="username"
        />
        <label for="floatingPassword">Username</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="password"
          class="form-control"
          id="floatingPassword"
          placeholder="Password"
          name="password"
        />
        <label for="floatingPassword">Password</label>
      </div>
      <button class="btn-lg btn btn-primary w-100">Log in</button>
    </form>
  </div>
</section>
<%- include("partials/footer.ejs")%>
